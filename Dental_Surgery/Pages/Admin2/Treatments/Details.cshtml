@page
@model Dental_Surgery.Pages.Admin2.Treatments.DetailsModel

@{
    ViewData["Title"] = "Treatment Details";
}

<div class="container mt-5">
    <h2 class="mb-4">Treatment Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-md-3 text-muted">
                    @Html.DisplayNameFor(model => model.Treatment.Name)
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Treatment.Name)
                </dd>

                <dt class="col-md-3 text-muted">
                    @Html.DisplayNameFor(model => model.Treatment.Description)
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Treatment.Description)
                </dd>

                <dt class="col-md-3 text-muted">
                    @Html.DisplayNameFor(model => model.Treatment.Cost)
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Treatment.Cost)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-page="./Edit" asp-route-id="@Model.Treatment.TreatmentId" class="btn btn-primary">Edit</a>
            <a asp-page="./Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>
