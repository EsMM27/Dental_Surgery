@page
@model Dental_Surgery.Pages.Admin2.Treatments.DeleteModel

@{
    ViewData["Title"] = "Delete Treatment";
}

<div class="container mt-5">
    <h2 class="mb-4 text-danger">Delete Treatment</h2>

    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to permanently delete this treatment?
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-md-3 text-muted">
                    @Html.DisplayNameFor(model => model.Treatment.Name)
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Treatment.Name)
                </dd>

                <dt class="col-md-3 text-muted">
                    @Html.DisplayNameFor(model => model.Treatment.Description)
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Treatment.Description)
                </dd>

                <dt class="col-md-3 text-muted">
                    @Html.DisplayNameFor(model => model.Treatment.Cost)
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Treatment.Cost)
                </dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <form method="post" class="d-inline">
                <input type="hidden" asp-for="Treatment.TreatmentId" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a asp-page="./Index" class="btn btn-outline-secondary ms-2">Cancel</a>
        </div>
    </div>
</div>
