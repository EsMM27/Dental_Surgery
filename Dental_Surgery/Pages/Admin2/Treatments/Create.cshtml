@page
@model Dental_Surgery.Pages.Admin2.Treatments.CreateModel

@{
    ViewData["Title"] = "Create Treatment";
}

<div class="container mt-5">
    <h2 class="mb-4">Create New Treatment</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Treatment.Name" class="form-label"></label>
                    <input asp-for="Treatment.Name" class="form-control" placeholder="Enter treatment name" />
                    <span asp-validation-for="Treatment.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Treatment.Description" class="form-label"></label>
                    <textarea asp-for="Treatment.Description" class="form-control" rows="4" placeholder="Enter description"></textarea>
                    <span asp-validation-for="Treatment.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Treatment.Cost" class="form-label"></label>
                    <input asp-for="Treatment.Cost" class="form-control" placeholder="Enter cost" />
                    <span asp-validation-for="Treatment.Cost" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Create Treatment</button>
                    <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
