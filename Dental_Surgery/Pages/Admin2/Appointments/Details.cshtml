@page
@model Dental_Surgery.Pages.Admin2.Appointments.DetailsModel

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container mt-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    <h2 class="mb-4">Appointment Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">

                @* Shared field for both roles *@
                @if (Model.UserRoles.Contains("Receptionist") || Model.UserRoles.Contains("Dentist"))
                {
                    <dt class="col-md-3 text-muted">
                        @Html.DisplayNameFor(model => model.Appointment.AppointmentDate)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Appointment.AppointmentDate)
                    </dd>

                    <dt class="col-md-3 text-muted">
                        Notes
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Appointment.Notes)
                    </dd>
                }

                @* Dentist-only fields *@
                @if (Model.UserRoles.Contains("Dentist"))
                {


                    <dt class="col-md-3 text-muted">
                        Treatment
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Appointment.Treatment.Name)
                    </dd>
                }

                @* Receptionist-only fields *@
                @if (Model.UserRoles.Contains("Receptionist"))
                {
                    <dt class="col-md-3 text-muted">
                        @Html.DisplayNameFor(model => model.Appointment.attend)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Appointment.attend)
                    </dd>

                    <dt class="col-md-3 text-muted">
                        Dentist
                    </dt>
                    <dd class="col-md-9">
                        Dr. @Model.Appointment.Dentist.LastName
                    </dd>

                    <dt class="col-md-3 text-muted">
                        Patient Address
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Appointment.Patient.Address)
                    </dd>

                    <dt class="col-md-3 text-muted">
                        Treatment
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Appointment.Treatment.Name)
                    </dd>
                }

            </dl>

        </div>

        <div class="card-footer text-end">
            <a asp-page="./Edit" asp-route-id="@Model.Appointment.AppointmentId" class="btn btn-primary">Edit</a>
            <a href="@Model.BackUrl" class="btn btn-outline-secondary ms-2">Back to List</a>

        </div>
    </div>
</div>
