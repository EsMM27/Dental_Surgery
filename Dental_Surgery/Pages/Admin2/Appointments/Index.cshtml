@page
@model Dental_Surgery.Pages.Admin2.Appointments.IndexModel

@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-4">
    <h2>Appointments</h2>

    <table class="table table-striped table-bordered table-white">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Notes</th>
                <th>Attendence</th>
                <th>Dentist</th>
                <th>Patient</th>
                <th>Treatment</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Appointment)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AppointmentDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                    <td>@Html.DisplayFor(modelItem => item.attend)</td>
                    <td>@Html.DisplayFor(modelItem => item.Dentist.FirstName) @Html.DisplayFor(modelItem => item.Dentist.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Patient.FirstName) @Html.DisplayFor(modelItem => item.Patient.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Treatment.Description)</td>
                    <td class="text-center">
                        <a asp-page="./Edit" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-warning w-100">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-info w-100">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-danger w-100">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
