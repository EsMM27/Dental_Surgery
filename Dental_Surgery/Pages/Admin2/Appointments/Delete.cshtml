@page
@model Dental_Surgery.Pages.Admin2.Appointments.DeleteModel

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container mt-5">
    <h2 class="mb-4 text-danger">Delete Appointment</h2>

    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to permanently delete this appointment?
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-md-3 text-muted">
                    @Html.DisplayNameFor(model => model.Appointment.AppointmentDate)
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Appointment.AppointmentDate)
                </dd>

                <dt class="col-md-3 text-muted">
                    @Html.DisplayNameFor(model => model.Appointment.Notes)
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Appointment.Notes)
                </dd>

                <dt class="col-md-3 text-muted">
                    @Html.DisplayNameFor(model => model.Appointment.attend)
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Appointment.attend)
                </dd>

                <dt class="col-md-3 text-muted">
                    Dentist
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Appointment.Dentist.AwardingBody)
                </dd>

                <dt class="col-md-3 text-muted">
                    Patient Address
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Appointment.Patient.Address)
                </dd>

                <dt class="col-md-3 text-muted">
                    Treatment
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.Appointment.Treatment.Description)
                </dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <form method="post" class="d-inline">
                <input type="hidden" asp-for="Appointment.AppointmentId" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a asp-page="./Index" class="btn btn-outline-secondary ms-2">Cancel</a>
        </div>
    </div>
</div>
