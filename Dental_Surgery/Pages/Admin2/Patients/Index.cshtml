@page
@model Dental_Surgery.Pages.Admin2.Patients.IndexModel

@{
    ViewData["Title"] = "Patients";
}

<h1>Patients</h1>
<br />

<div class="col-3">
    <input type="text" id="searchPatient" placeholder="Search..." class="form-control me-sm-2" />
</div>

<p>
    <a asp-page="Create">Add new patient</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>PPS</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Contact Number</th>
            <th>Email</th>
            <th>Address</th>
            <th>Date of Birth</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="patientTableBody">
        @foreach (var item in Model.Patient)
        {
            <tr>
                <td>@item.PPS</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.ContactNumber</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>@item.DateOfBirth.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.PatientId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.PatientId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.PatientId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.getElementById("searchPatient").addEventListener("input", function () {
            let searchValue = this.value;

            fetch(`/Admin2/Patients/Index?handler=SearchPatients&searchString=${searchValue}`)
                .then(response => response.json())
                .then(data => {
                    let tableBody = document.getElementById("patientTableBody");
                    tableBody.innerHTML = "";

                    data.forEach(patient => {
                        let row = `<tr>
                                    <td>${patient.pps}</td>
                                    <td>${patient.firstName}</td>
                                    <td>${patient.lastName}</td>
                                    <td>${patient.contactNumber}</td>
                                    <td>${patient.email}</td>
                                    <td>${patient.address}</td>
                                    <td>${patient.dateOfBirth}</td>
                                    <td>
                                        <a href="./Edit?id=${patient.patientId}">Edit</a> |
                                        <a href="./Details?id=${patient.patientId}">Details</a> |
                                        <a href="./Delete?id=${patient.patientId}">Delete</a>
                                    </td>
                                </tr>`;
                        tableBody.innerHTML += row;
                    });
                });
        });
    </script>
}
