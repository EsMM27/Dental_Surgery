@page
@model Dental_Surgery.Pages.Admin2.Patients.EditModel

@{
    ViewData["Title"] = "Edit Patient";
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Patient</h2>
        <div class="card shadow-sm">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Patient.PatientId" />
                <div class="mb-3">
                    <span class="text-danger">*</span>
                    <label asp-for="Patient.PPS" class="control-label"></label>
                    <input asp-for="Patient.PPS" class="form-control" />
                    <span asp-validation-for="Patient.PPS" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Patient.FirstName" class="control-label"></label>
                    <input asp-for="Patient.FirstName" class="form-control" />
                    <span asp-validation-for="Patient.FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Patient.LastName" class="control-label"></label>
                    <input asp-for="Patient.LastName" class="form-control" />
                    <span asp-validation-for="Patient.LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Patient.ContactNumber" class="control-label"></label>
                    <input asp-for="Patient.ContactNumber" class="form-control" />
                    <span asp-validation-for="Patient.ContactNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Patient.Email" class="control-label"></label>
                    <input asp-for="Patient.Email" class="form-control" />
                    <span asp-validation-for="Patient.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Patient.Address" class="control-label"></label>
                    <input asp-for="Patient.Address" class="form-control" />
                    <span asp-validation-for="Patient.Address" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Patient.DateOfBirth" class="control-label"></label>
                    <input asp-for="Patient.DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="Patient.DateOfBirth" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
        </div>
    
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
