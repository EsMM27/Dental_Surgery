@page
@model Dental_Surgery.Pages.Admin2.Patients.CreateModel
@{
    ViewData["Title"] = "Register Patient";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="card-title text-center mb-4 text-primary">Register Patient</h3>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Patient.PPS" class="form-label">
                                PPS <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Patient.PPS" class="form-control" placeholder="Enter PPS number" />
                            <span asp-validation-for="Patient.PPS" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Patient.FirstName" class="form-label"></label>
                            <input asp-for="Patient.FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="Patient.FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Patient.LastName" class="form-label"></label>
                            <input asp-for="Patient.LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="Patient.LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Patient.ContactNumber" class="form-label"></label>
                            <input asp-for="Patient.ContactNumber" class="form-control" placeholder="Enter contact number" />
                            <span asp-validation-for="Patient.ContactNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Patient.Email" class="form-label"></label>
                            <input asp-for="Patient.Email" type="email" class="form-control" placeholder="Enter email address" />
                            <span asp-validation-for="Patient.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Patient.Address" class="form-label"></label>
                            <input asp-for="Patient.Address" class="form-control" placeholder="Enter address" />
                            <span asp-validation-for="Patient.Address" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Patient.DateOfBirth" class="form-label"></label>
                            <input asp-for="Patient.DateOfBirth" type="date" class="form-control" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="Patient.DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Register Patient</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-page="Index" class="btn btn-link">Back to List</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
