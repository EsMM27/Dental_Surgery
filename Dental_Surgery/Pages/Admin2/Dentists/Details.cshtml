@page
@model Dental_Surgery.Pages.Admin2.Dentists.DetailsModel

@{
    ViewData["Title"] = "Dentist Details";
}

<div class="container mt-5">
    <h2 class="mb-4">Dentist Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row align-items-left">
                <div class="col-md-3 text-center mb-4 mb-md-0">
                    <div style="max-width: 250px; margin: 0 auto;">
                        <img src="/@Url.Content(Model.Dentist.Image)"
                             alt="Dentist Photo"
                             class="img-fluid"
                             style="max-height: 400px; width: auto; object-fit: contain;" />
                    </div>
                </div>
                <div class="col-md-9">
                    <dl class="row">
                        <dt class="col-md-3 text-muted">Name</dt>
                        <dd class="col-md-9">@Model.Dentist.FirstName @Model.Dentist.LastName</dd>

                        <dt class="col-md-3 text-muted">Specialisation</dt>
                        <dd class="col-md-9">@Model.Dentist.Specialization</dd>

                        <dt class="col-md-3 text-muted">Awarding Body</dt>
                        <dd class="col-md-9">@Model.Dentist.AwardingBody</dd>

                        <dt class="col-md-3 text-muted">Email</dt>
                        <dd class="col-md-9">@Model.Dentist.Email</dd>

                        <dt class="col-md-3 text-muted">Contact number</dt>
                        <dd class="col-md-9">@Model.Dentist.ContactNumber</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-page="./Edit" asp-route-id="@Model.Dentist.DentistId" class="btn btn-primary">Edit</a>
            <a asp-page="./Index" class="btn btn-outline-secondary ms-2">Back to List</a>
        </div>
    </div>
</div>