@page
@model Dental_Surgery.Pages.Admin2.Dentists.DetailsModel

@{
    ViewData["Title"] = "Dentist Details";
}

<div class="container mt-5">
    <h2 class="mb-4">Dentist Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="text-center mb-4">
                <img src="/@Url.Content(Model.Dentist.Image)" alt="Dentist Photo" class="img-thumbnail" style="max-height:250px; width:auto;" />
            </div>

            <dl class="row">
                <dt class="col-md-4 text-muted">First Name</dt>
                <dd class="col-md-8">@Html.DisplayFor(model => model.Dentist.FirstName)</dd>

                <dt class="col-md-4 text-muted">Last Name</dt>
                <dd class="col-md-8">@Html.DisplayFor(model => model.Dentist.LastName)</dd>

                <dt class="col-md-4 text-muted">Specialization</dt>
                <dd class="col-md-8">@Html.DisplayFor(model => model.Dentist.Specialization)</dd>

                <dt class="col-md-4 text-muted">Awarding Body</dt>
                <dd class="col-md-8">@Html.DisplayFor(model => model.Dentist.AwardingBody)</dd>

                <dt class="col-md-4 text-muted">Contact Number</dt>
                <dd class="col-md-8">@Html.DisplayFor(model => model.Dentist.ContactNumber)</dd>

                <dt class="col-md-4 text-muted">Email</dt>
                <dd class="col-md-8">@Html.DisplayFor(model => model.Dentist.Email)</dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <a asp-page="./Edit" asp-route-id="@Model.Dentist.DentistId" class="btn btn-primary">Edit</a>
            <a asp-page="./Index" class="btn btn-outline-secondary ms-2">Back to List</a>
        </div>
    </div>
</div>
