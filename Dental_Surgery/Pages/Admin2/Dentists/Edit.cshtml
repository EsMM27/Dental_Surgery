@page
@model Dental_Surgery.Pages.Admin2.Dentists.EditModel

@{
    ViewData["Title"] = "Edit Dentist";
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Dentist Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Dentist.DentistId" />

                <div class="mb-3">
                    <label asp-for="Dentist.FirstName" class="form-label"></label>
                    <input asp-for="Dentist.FirstName" class="form-control" placeholder="Enter first name" />
                    <span asp-validation-for="Dentist.FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dentist.LastName" class="form-label"></label>
                    <input asp-for="Dentist.LastName" class="form-control" placeholder="Enter last name" />
                    <span asp-validation-for="Dentist.LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dentist.Specialization" class="form-label"></label>
                    <input asp-for="Dentist.Specialization" class="form-control" placeholder="Enter specialization" />
                    <span asp-validation-for="Dentist.Specialization" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dentist.AwardingBody" class="form-label"></label>
                    <input asp-for="Dentist.AwardingBody" class="form-control" placeholder="Enter awarding body" />
                    <span asp-validation-for="Dentist.AwardingBody" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dentist.ContactNumber" class="form-label"></label>
                    <input asp-for="Dentist.ContactNumber" class="form-control" placeholder="Enter contact number" />
                    <span asp-validation-for="Dentist.ContactNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dentist.Email" class="form-label"></label>
                    <input asp-for="Dentist.Email" type="email" class="form-control" placeholder="Enter email address" />
                    <span asp-validation-for="Dentist.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Dentist.Image" class="form-label"></label>
                    <input asp-for="Dentist.Image" class="form-control" placeholder="Enter image URL" />
                    <span asp-validation-for="Dentist.Image" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
