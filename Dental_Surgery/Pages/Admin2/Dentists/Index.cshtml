@page
@model Dental_Surgery.Pages.Admin2.Dentists.IndexModel

@{
    ViewData["Title"] = "Dentists";
}

<div class="container mt-4">
    <h2>Dentists</h2>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-page="Create" class="btn btn-success">Add New Dentist</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle table-white">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Dentist[0].FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.Dentist[0].LastName)</th>
                    <th>@Html.DisplayNameFor(model => model.Dentist[0].Specialization)</th>
                    <th>@Html.DisplayNameFor(model => model.Dentist[0].AwardingBody)</th>
                    <th>@Html.DisplayNameFor(model => model.Dentist[0].ContactNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Dentist[0].Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Dentist[0].Image)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Dentist)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
                        <td>@Html.DisplayFor(modelItem => item.AwardingBody)</td>
                        <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>
                            <img src="/@Url.Content(item.Image)" alt="Dentist Photo" class="img-thumbnail" style="height:80px; width:80px; object-fit:cover;" />
                        </td>
                        <td class="text-center">
                            <a asp-page="./Edit" asp-route-id="@item.DentistId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.DentistId" class="btn btn-sm btn-info">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.DentistId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
