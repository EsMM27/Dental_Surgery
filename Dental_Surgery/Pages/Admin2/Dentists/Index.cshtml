@page
@model Dental_Surgery.Pages.Admin2.Dentists.IndexModel

@{
    ViewData["Title"] = "Dentists";
}

<div class="container mt-4">
    <h2>Dentist</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle table-white">
            <thead class="table-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Specialisation</th>
                    <th>Awarding Body</th>
                    <th>Contact Number</th>
                    <th>Email</th>
                    <th>Image</th>
                    <th class="text-center" style="width: 15%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Dentist)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Specialization</td>
                        <td>@item.AwardingBody</td>
                        <td>@item.ContactNumber</td>
                        <td>@item.Email</td>
                        <td class="text-center align-middle">
                            <img src="/@Url.Content(item.Image)"
                                 class="img-thumbnail"
                                 style="height: 80px; width: auto; max-width: 100%; object-fit: contain;" />
                        </td>

                        <td class="text-center">
                            <a asp-page="./Edit" asp-route-id="@item.DentistId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.DentistId" class="btn btn-sm btn-info">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.DentistId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
