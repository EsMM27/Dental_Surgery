@page
@model Dental_Surgery.Pages.RegisterUsers.IndexModel
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "User Management";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>User Name</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            var roles = await Model.GetUserRolesAsync(user);
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    @foreach (var role in roles)
                    {
                        <span class="badge bg-secondary">@role</span>
                    }
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center mt-3">
    <div class="btn-group-vertical">
        <a asp-page="/Register" class="btn btn btn-primary mb-2">Create New User</a>
        <a asp-page="/Admin2/Dentists/Create" class="btn btn btn-primary mb-2">Create New Dentist</a>
        <a asp-page="/Admin2/Receptionist/Create" class="btn btn btn-primary mb-2">Create New Receptionist</a>
    </div>
</div>